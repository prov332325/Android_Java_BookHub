<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

    <!--    책 추천-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/board_category"
            android:text="책 추천"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:padding="5dp"
            android:background="@drawable/shape_rectangle_main"/>
    </LinearLayout>


    <!--    제목, 내용 -->
    <LinearLayout
        android:id="@+id/title_ccontent_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/board_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="게시글 제목 입니다"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/board_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="내용입니다 원하시는 내용을 써주세용"
            android:textSize="16dp"
            android:textColor="#897171"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="7dp"
            />
        </LinearLayout>

<!--        이미지-->
        <ImageView
            android:id="@+id/board_thumnail"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_launcher_background"
            android:visibility="gone"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="15dp"
            android:layout_gravity="end"
            android:visibility="gone"
            />
    </LinearLayout>


    <!--    공감, 댓글, 날짜 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_line_heart" />

        <TextView
            android:id="@+id/board_like_cnt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="공감해요 3개"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_comment"
            />
        <TextView
            android:id="@+id/board_comment_cnt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="댓글 344개"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/board_date_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="3일 전"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:textAlignment="textEnd"
            />



    </LinearLayout>

    </LinearLayout>
</LinearLayout>

</LinearLayout>