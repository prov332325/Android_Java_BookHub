<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <!--   날짜 -->
    <TextView
        android:id="@+id/chatting_date_change_from"
        android:layout_width="170dp"
        android:layout_height="17dp"
        android:layout_margin="7dp"
        android:layout_gravity="center"
        android:text="2024년 10월 11일"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="10dp"
        android:background="@drawable/shape_rectangle_moregray_round"
        />

    <!--   프사, 메시지, 시간 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="end"
        >

    <!--    시간  -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:gravity="bottom">
        <TextView
            android:id="@+id/is_read_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="12dp"
            android:textAlignment="textEnd"
            />

        <TextView
            android:id="@+id/chatting_time_fromme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오후 10:31"
            android:textColor="#B5ADAD"
            android:textSize="11dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatting_content_fromme"
            android:layout_width="wrap_content"
            android:maxWidth="240dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="채팅을 보냈습니다. "
            android:textAlignment="center"
            android:textSize="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/shape_rectangle_gray_round"
            />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>