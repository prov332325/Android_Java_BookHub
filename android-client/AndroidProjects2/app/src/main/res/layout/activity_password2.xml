<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        app:titleTextAppearance="@style/ToolbarTheme" />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:text="비밀번호 재설정"
        android:textSize="27dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 비밀번호"
            android:textSize="17dp"
            android:textColor="#444444"
            android:layout_marginBottom="5dp"

            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/NewPassword1"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="영문,숫자,특수문자 조합의 8이상 15자 이하"
                android:textSize="13dp"
                android:inputType="textPassword"
                android:fontFamily="@font/laundry_regular"
                android:textColorHint="@color/hint_text"
                android:drawableEnd="@drawable/icon_eyeslash1"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 비밀번호 재입력"
            android:textSize="17dp"
            android:textColor="#444444"
            android:layout_marginBottom="5dp"

            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/NewPassword2"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/laundry_regular"
                android:hint="비밀번호를 다시 한 번 입력해 주세요"
                android:inputType="textPassword"
                android:textColorHint="@color/hint_text"
                android:textSize="13dp"
                android:drawableEnd="@drawable/icon_eyeslash1"
                />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/password_change_btn"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="비밀번호 변경하기"
        android:background="@color/main"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/password_change_later"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="나중에 변경하기"
        android:background="@color/main"
        android:layout_marginTop="30dp"
        />

</LinearLayout>