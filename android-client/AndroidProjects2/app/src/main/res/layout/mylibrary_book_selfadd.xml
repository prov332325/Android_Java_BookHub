<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/icon_arrowleft"
        android:background="@color/main"
        app:titleTextAppearance="@style/ToolbarTheme"
        tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="책 직접 추가하기"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:textAlignment="center"
                />
    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/book_selfadd_save_btn"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="end"
        android:background="@color/main"
        android:text="내 서재에 저장"
        android:textSize="15dp"
        />


    <ImageView
        android:id="@+id/book_selfadd_cover"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@drawable/shape_rectangle_gray_round"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />


    <!--    책 제목 -->
    <ImageView
        android:id="@+id/book_selfadd_edit_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="154dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_edit" />

    <TextView
        android:id="@+id/book_selfadd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="책 제목"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/book_selfadd_title_edit"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="제목을 입력해 주세요"
        android:textSize="15dp"
        android:fontFamily="@font/laundry_regular"
        />


    <!--    책 작가 -->
    <TextView
        android:id="@+id/book_selfadd_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="책 작가"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/book_selfadd_author_txt"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="작가명을 입력해 주세요"
        android:textSize="15dp"
        android:fontFamily="@font/laundry_regular"
        />


    <!--    책 소개 -->
    <TextView
        android:id="@+id/book_discrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="책 소개"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/book_selfadd_discrip_txt"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="책에 대한 소개를 작성해주세요"
        android:textSize="15dp"
        android:fontFamily="@font/laundry_regular"
        />


    <!--출판사 -->
    <TextView
        android:id="@+id/book_selfadd_pub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="출판사"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/book_selfadd_pub_txt"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="출판사 명을 입력해 주세요"
        android:textSize="15dp"
        android:fontFamily="@font/laundry_regular"
        />

    <!--ISBN -->
    <TextView
        android:id="@+id/book_selfadd_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="ISBN"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />


    <EditText
        android:id="@+id/book_selfadd_isbn_txt"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="ex) KA62624dfd2564651"
        android:textSize="15dp"
        android:fontFamily="@font/laundry_regular"
        />









</LinearLayout>